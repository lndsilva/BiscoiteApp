<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSplash"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lobsterregular"
        android:text="BiscoitÃª"
        android:textColor="#905E3A"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pgbSplash"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLogoSplash"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDuration="@integer/material_motion_duration_long_2" />

</RelativeLayout>